<%= link_to 'Log Weight', new_weight_path %>
<div class="chart-holder"><canvas id="myChart" width="400" height="400"></canvas></div>
<ul>
  <% if !@weights.blank?%>
    <% @weights.each do |w| %>
      <li><%= w.date.strftime('%b %e %l:%M %p') %> - <%= w.amount %></li>
    <% end %>
  <% else %>
    <li>No Weights Yet</li>
  <% end %>
</ul>
